<style>

      h1{
      font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
      text-align: center;
      font-size: 40px; /* Adjusted for smaller screens */
    }
     .maindiv{
      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
       min-height: 100vh;
       width:100%;
       background-color:#fff;
       padding: 20px;
     }
    
     .container{
      display: flex;
      gap: 20px;
      justify-content: center;
      height: auto;
      flex-wrap: wrap; /* Ensures stacking on smaller screens */
     }

     .Urlform .btn, .QRform .btn{
      background-color: rgb(89, 155, 89);
      border: 1px solid black;
      border-radius: 10px;
      width: 100%; /* Full width for mobile */
      padding: 10px;
     }

     .urlshort, .qrcode{
      border: 3px solid black;
      border-radius: 20px;
      padding: 20px;
      margin: 10px;
      width: 100%;
      max-width: 400px; /* Restrict width on larger screens */
     }
      
     .Urlform, .QRform{
      font-size: 24px; /* Slightly smaller for readability */
     }

     .urlshort label, .qrcode label{
      font-size: 18px;
     }

     input[type="text"], input[type="password"], input[type="email"] {
      width: 100%;
      padding: 8px;
      margin: 5px 0;
      font-size: 16px;
     }

     table {
      width: 100%;
      font-size: 14px; /* Adjusted for small screens */
     }

     th, td {
      padding: 8px;
      text-align: left;
     }

     @media (max-width: 768px) {
      h1 {
        font-size: 32px;
      }
      .container {
        flex-direction: column;
        align-items: center;
      }
      .urlshort, .qrcode {
        width: 90%;
      }
      table {
        font-size: 12px;
      }
     }

  </style>

